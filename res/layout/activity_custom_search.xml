<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    >
<LinearLayout android:layout_height="44dp"
       			  android:layout_width="match_parent"
       			  android:orientation="vertical"
       			  android:background="@color/blue">
     <RelativeLayout android:layout_height="match_parent"
       			  android:layout_width="match_parent">		  
        <TextView 
            	  android:layout_height="wrap_content"
            	  android:layout_width="wrap_content"
            	  android:text="自定义"
            	  android:layout_centerHorizontal="true"
				  android:layout_centerVertical="true"
            	  android:textColor="#ffffff"
            	  android:textSize="18sp"/>

        <ImageView
            android:id="@+id/custom_search_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            android:src="@drawable/take_photo"
            android:textColor="#ffffff"
            android:textSize="17sp" 
        android:visibility="gone"/>

 		<ImageView
 		    android:id="@+id/custom_search_local"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:layout_alignParentRight="true"
 		    android:layout_centerVertical="true"
 		    android:layout_marginRight="12dp"
 		    android:src="@drawable/photo"
 		    android:textColor="#ffffff"
 		    android:textSize="17sp" 
        android:visibility="gone"/>

           
            <ImageButton
			    android:id="@+id/imgbt_back"
			    android:layout_width="44dp"
			    android:layout_height="44dp"
			    android:layout_centerVertical="true"
			    android:background="@drawable/button_click_background_change"
			    android:src="@drawable/back" />
            
        </RelativeLayout>
       </LinearLayout>
       

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:text="伊伊"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/search_content"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="71dp"
        android:background="@drawable/common_round_input"
        android:gravity="center"
        android:hint="你想要的搜索内容"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/eighty_black"
        android:textColorHint="@color/twenty_black"
        android:textSize="16sp" >

    </EditText>

    <Button
        android:id="@+id/search_ok_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/search_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/common_button_selector"
        android:text="确定"
        android:textColor="@color/eighty_black"
        android:textSize="16sp" />
  
</RelativeLayout>
    
</LinearLayout>