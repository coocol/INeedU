<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
	android:padding="6dp"
    >

    <FrameLayout android:id="@+id/pourlisten_page_detail"
        			android:layout_height="wrap_content"
        			android:layout_width="match_parent"
        			android:background="@drawable/white_click_black"
        			android:padding="12dp">
        			
     <ImageView
         android:id="@+id/pourlisten_page_item_background"
         android:layout_width="match_parent"
         android:layout_height="198dp" 
         android:scaleType="centerCrop"
         android:background="@color/ten_black"
         />
     
     
     
     <RelativeLayout 
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         >
         
         <RelativeLayout 
	         android:layout_height="32dp"
	         android:layout_width="match_parent"
	         >
	         
		        <ImageView android:layout_height="match_parent"
		            android:layout_width="match_parent"
		            android:background="@color/ten_black"/>
			        
		        <ImageView 
		            android:id="@+id/iv_sex"
		            android:layout_height="20dp"
		            android:layout_width="20dp"
		            android:layout_marginLeft="24dp"
		            android:layout_centerVertical="true"
		            android:background="@null"/>
		        
		        
		        <TextView android:id="@+id/tv_distance"
		                  android:layout_height="wrap_content"
		           		  android:layout_width="wrap_content"
		           		  android:textSize="15sp"
		           		  android:layout_toRightOf="@id/iv_sex"
		           		  android:layout_marginLeft="6dp"
		           		  android:layout_centerVertical="true"
		           		  android:textColor="@color/white"/>
		        
		         
		        <TextView android:id="@+id/tv_time"
		                  android:layout_height="wrap_content"
		           		  android:layout_width="wrap_content"
		           		  android:textSize="15sp"
		           		  android:layout_toRightOf="@id/tv_distance"
		           		  android:layout_marginLeft="6dp"
		           		  android:layout_centerVertical="true"
		           		  android:textColor="@color/white"/>
		        
		        <TextView android:id="@+id/pourlisten_page_item_numofcommit"
		                  android:layout_height="wrap_content"
		           		  android:layout_width="wrap_content"
		           		  android:layout_alignParentRight="true"
		           		  android:textSize="16sp"
		           		  android:layout_marginRight="24dp"
		           		  android:layout_centerVertical="true"
		           		  android:textColor="@color/white"/>
		        
		        <ImageView android:id="@+id/pourlisten_page_item_commit"
		            android:layout_height="20dp"
		            android:layout_width="20dp"
		            android:layout_marginRight="6dp"
		            android:layout_centerVertical="true"
		            android:layout_toLeftOf="@id/pourlisten_page_item_numofcommit"
		            android:background="@drawable/comment"/>
		        
		        
		        
              
         </RelativeLayout>
         
         <RelativeLayout
             android:id="@+id/pourlisten_page_item_rela"
             android:layout_width="match_parent"
             android:layout_height="198dp"
             android:scrollbars="none" >
          
        <TextView
            android:id="@+id/pourlisten_page_item_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="4"
            android:padding="24dp"
            android:textColor="@color/white"
            android:textSize="16sp" 
            android:gravity="center|start"
		    android:autoLink="web|email|map"/>
      
        </RelativeLayout>
        
   
        
        
        
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>
