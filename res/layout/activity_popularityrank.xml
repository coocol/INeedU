<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    <LinearLayout android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="@color/blue">
        <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent">
           
         
            <ImageButton
			    android:id="@+id/popularity_page_back_button"
			    android:layout_width="44dp"
			    android:layout_height="44dp"
			    android:layout_centerVertical="true"
			    android:background="@drawable/button_click_background_change"
			    android:src="@drawable/back" />
            
            <TextView 
            	  android:layout_height="wrap_content"
            	  android:layout_width="wrap_content"
            	  android:text="校园明星榜"
            	  android:layout_centerInParent="true"
            	  android:textColor="#ffffff"
            	  android:textSize="18sp"/>

        
            
        </RelativeLayout>
    </LinearLayout>
    
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/title_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center" >

                <TextView
                    android:id="@+id/dayrank_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/love_dayrank"
                    android:textColor="@color/blue"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/sumrank_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/eighty_black"
                    android:text="@string/popularity_sumrank"
                    android:textSize="17dp" />

               
            </LinearLayout>

            
        </LinearLayout>
            
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue">
        
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/popularityrank_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>