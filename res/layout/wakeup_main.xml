<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/blue">
    
  
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="44dp" >


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:text="起床困难户"
             android:textColor="@color/white"
             android:textSize="18sp" />

		<ImageButton
		    android:id="@+id/imgbt_back"
		    android:layout_width="44dp"
		    android:layout_height="44dp"
		    android:layout_centerVertical="true"
		    android:background="@drawable/button_click_background_change"
		    android:src="@drawable/back" />
		
		<ImageButton
		    android:id="@+id/imgbt_requirement"
		    android:layout_width="44dp"
		    android:layout_height="match_parent"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:background="@drawable/button_click_background_change"
		    android:src="@drawable/requirement_nocircle" />

     </RelativeLayout>


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical" >

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1" >

             <ImageButton
                 android:id="@+id/imgbt_match"
                 android:layout_width="180dp"
                 android:layout_height="180dp"
                 android:padding="12dp"
                 android:layout_centerHorizontal="true"
                 android:layout_centerVertical="true"
                 android:src="@drawable/dark_blue_circle"
                 android:background="@drawable/ten_black_circle_selector" />

             <TextView
                 android:id="@+id/tv_match"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignTop="@+id/imgbt_match"
                 android:layout_centerHorizontal="true"
                 android:layout_marginTop="48dp"
                 android:text="加入匹配"
                 android:textSize="20sp"
                 android:textColor="@color/white" />

             <RelativeLayout
                 android:id="@+id/re_boy"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_alignBottom="@+id/imgbt_match"
                 android:layout_centerHorizontal="true"
                 android:layout_marginBottom="36dp" >
             
                 <ImageView 
                     android:id="@+id/img_boy"
                     android:layout_width="15dp"
                     android:layout_height="15dp"
                     android:background="@drawable/sex_boy_press"
                     android:layout_centerInParent="true"/>
                 
                 <TextView 
                     android:id="@+id/tv_boynum"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="200"
                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:layout_alignLeft="@id/img_boy"
                     android:layout_marginLeft="21dp"/>
             </RelativeLayout>
             
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_above="@+id/re_boy"
                 android:layout_centerHorizontal="true"
                 android:layout_marginBottom="6dp" >
             
                 <ImageView 
                     android:id="@+id/img_girl"
                     android:layout_width="15dp"
                     android:layout_height="15dp"
                     android:background="@drawable/sex_girl_press"
                     android:layout_centerInParent="true"/>
                 
                 <TextView 
                     android:id="@+id/tv_girlnum"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="150"
                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:layout_alignLeft="@id/img_girl"
                     android:layout_marginLeft="21dp"/>
                 <TextView android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="今日:"
                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:layout_alignRight="@id/img_girl"
                     android:layout_marginRight="21dp"/>
             </RelativeLayout>

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:layout_marginBottom="12dp" 
                 android:layout_marginLeft="12dp"
                 android:layout_marginRight="12dp">

                 <ToggleButton
                     android:id="@+id/tgbt_anonymity"
                     android:layout_width="35dp"
                     android:layout_height="20dp"
                     android:layout_centerVertical="true"
                     android:textOn=""
                     android:textOff=""
                     android:background="@drawable/toggle_button_selector"/>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_marginLeft="6dp"
                     android:layout_toRightOf="@+id/tgbt_anonymity"
                     android:text="匿名匹配"
                     android:textColor="@color/white"
                     android:textSize="17sp" />

                 <TextView
                     android:id="@+id/tv_total"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:text="累计:1243户" 
                     android:textColor="@color/white"
                     android:textSize="17sp"/>
                 
             </RelativeLayout>
             
             <ImageView 
                 android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                 android:background="@color/eighty_white"
                 android:layout_marginLeft="12dp"
                 android:layout_marginRight="12dp"
                 android:layout_alignParentBottom="true"/>

         </RelativeLayout>
         
         
		<ScrollView 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:scrollbars="none">
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="2"
		    android:orientation="vertical">

			<TextView
			    android:id="@+id/tv_rule"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="12dp"
			    android:layout_marginTop="12dp"
			    android:layout_marginRight="12dp"
			    android:textColor="@color/sixty_black"
			    android:text="规则:匹配一个异性互叫对方起床~推荐第一天女生叫男生,接下去一人叫一天~" 
			    android:textSize="13dp"/>

			<RelativeLayout
			    android:id="@+id/re_partner"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="12dp"
			    android:layout_marginRight="12dp"
			    android:layout_marginTop="12dp" 
			    android:layout_marginBottom="12dp"
			    android:padding="6dp"
			    android:background="@drawable/five_corner_ten_black"
			    >

			    <ImageView
			        android:id="@+id/img_head"
			        android:layout_width="50dp"
			        android:layout_height="50dp"
			        android:background="@drawable/logo" />

			    <RelativeLayout
			        android:id="@+id/re_userinfo"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="12dp"
			        android:layout_marginTop="6dp"
			        android:layout_toRightOf="@+id/img_head" >

			        <ImageView
			            android:id="@+id/img_sex"
			            android:layout_width="20dp"
			            android:layout_height="20dp"
			            android:layout_centerVertical="true"
			            android:background="@drawable/sex_girl_press" />

			        <TextView
			            android:id="@+id/tv_telephone"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_marginLeft="6dp"
			            android:layout_toRightOf="@+id/img_sex"
			            android:text="15827XXXXXX"
			            android:textColor="@color/white"
			            android:textSize="15sp" />

			        <Button
			            android:id="@+id/bt_remove"
			            android:layout_width="wrap_content"
			            android:layout_height="20dp"
			            android:layout_alignParentRight="true"
			            android:background="@drawable/five_black_click_selector"
			            android:gravity="center"
			            android:text="解除关系"
			            android:textColor="@color/white"
			            android:textSize="12sp" />
			    </RelativeLayout>

			    <TextView
			        android:id="@+id/tv_requirement"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignLeft="@+id/re_userinfo"
			        android:layout_below="@+id/re_userinfo"
			        android:layout_marginTop="12dp"
			        android:text="对方要求：周一到周五7点叫我起床，7:10分能再叫一下更好，周末不需要~" 
			        android:textColor="@color/eighty_black"
			        android:textSize="15sp"/>
			</RelativeLayout>
		    
		</LinearLayout>
		</ScrollView>
     </LinearLayout>
</LinearLayout>