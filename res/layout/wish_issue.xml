<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    
<LinearLayout android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="@color/blue">
        <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent">
            
    
     <ImageButton
		    android:id="@+id/imgbt_back"
		    android:layout_width="44dp"
		    android:layout_height="44dp"
		    android:layout_centerVertical="true"
		    android:background="@drawable/button_click_background_change"
		    android:src="@drawable/back" />
            
            <TextView 
            	  android:layout_height="wrap_content"
            	  android:layout_width="wrap_content"
            	  android:text="写下星愿"
            	  android:layout_centerHorizontal="true"
            	  android:layout_centerVertical="true"
            	  android:textColor="#ffffff"
            	  android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:text="完成"
            android:clickable="true"
            android:background="@drawable/button_click_background_change"
             />
            
        </RelativeLayout>
    </LinearLayout>    
    

<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true" >

        <ImageView android:id="@+id/pour_listen_issue_page_background"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/twenty_black"
            android:scaleType="centerCrop"/>
        
        <EditText
            android:id="@+id/pour_listen_issue_page_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="46dp"
            android:background="@null"
            android:hint="请写下你的心愿..."
            android:maxLength="200"
            android:textColor="#ffffff"
            android:textColorHint="@color/eighty_white"
            android:textSize="18dp" >
           	
            </EditText>
            
        <ToggleButton
                     android:id="@+id/tgbt_anonymity"
                     android:layout_width="35dp"
                     android:layout_height="20dp"
                     android:textOn=""
                     android:textOff=""
                     android:layout_alignParentBottom="true"
                     android:layout_marginLeft="12dp"
                     android:layout_marginBottom="12dp"
                     android:background="@drawable/toggle_button_selector"/>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_marginLeft="6dp"
                     android:layout_alignBottom="@id/tgbt_anonymity"
                     android:layout_toRightOf="@+id/tgbt_anonymity"
                     android:text="匿名发布"
                     android:textColor="@color/white"
                     android:textSize="17sp" />
    
    </RelativeLayout>
</LinearLayout>

</LinearLayout>