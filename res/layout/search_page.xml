<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    
 <LinearLayout android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="@color/blue">
	<RelativeLayout android:layout_height="match_parent"
	    android:layout_width="match_parent"
	    >

   
            <ImageButton
			    android:id="@+id/search_page_back_button"
			    android:layout_width="44dp"
			    android:layout_height="44dp"
			    android:layout_centerVertical="true"
			    android:background="@drawable/button_click_background_change"
			    android:src="@drawable/back" />
                   
</RelativeLayout>
</LinearLayout>
	
 <LinearLayout android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:paddingTop="24dp"
     android:paddingBottom="24dp">
     <RelativeLayout android:layout_height="40dp"
         android:layout_width="match_parent"
         android:layout_marginLeft="12dp"
   		 android:layout_marginRight="12dp"
   		 android:background="@drawable/common_button_selector"
   		 >
         <ImageView android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_marginLeft="16dp"
             android:layout_centerVertical="true"
             android:background="@drawable/search"/>

         <EditText
             android:id="@+id/search_page_search_text"
             android:layout_width="256dp"
             android:layout_height="match_parent"
             android:layout_marginLeft="52dp"
             android:background="@null"
             android:hint="首字母搜索姓名/昵称更快捷~"
             android:singleLine="true"
             android:textColor="@color/eighty_black"
             android:textColorHint="@color/twenty_black"
             android:textSize="18sp" />

     </RelativeLayout>
 </LinearLayout>
 
 <LinearLayout android:layout_height="match_parent"
     android:layout_width="match_parent">

     <ListView
         android:id="@+id/search_page_listview"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:divider="@null"
         android:listSelector="@drawable/click_blue"
         android:scrollbars="none" />

     </LinearLayout>
 


</LinearLayout>
