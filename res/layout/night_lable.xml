<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    
  
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="44dp" 
         android:background="@color/blue">


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:text="兴趣爱好性格特点"
             android:textColor="@color/white"
             android:textSize="18sp" />

		<ImageButton
		    android:id="@+id/ig_back"
		    android:layout_width="44dp"
		    android:layout_height="44dp"
		    android:layout_centerVertical="true"
		    android:background="@drawable/button_click_background_change"
		    android:src="@drawable/back" />
		
		<Button
		    android:id="@+id/bt_finish"
		    android:layout_width="44dp"
		    android:layout_height="44dp"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:background="@drawable/button_click_background_change"
		    android:text="完成"
		    android:textColor="@color/white"
		    android:textSize="17sp"/>

     </RelativeLayout>

    

<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent">

      <com.handmark.pulltorefresh.library.PullToRefreshListView
          android:id="@+id/lv_night_lable"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:divider="@null" >
      </com.handmark.pulltorefresh.library.PullToRefreshListView>

      <Button
          android:id="@+id/button1"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_below="@+id/lv_night_lable"
          android:layout_marginTop="24dp"
          android:layout_marginLeft="24dp"
          android:layout_marginRight="24dp"
          android:text="换一波" 
          android:textColor="@color/eighty_black"
          android:textSize="17sp"
          android:background="@drawable/common_button_selector"/>
      
</RelativeLayout>
        
</LinearLayout>