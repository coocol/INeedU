<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue" >
 
            <LinearLayout android:layout_height="44dp"
       			  android:layout_width="match_parent"
       			  >
     <RelativeLayout android:layout_height="match_parent"
       			  android:layout_width="match_parent"
       			  >		  
        <TextView 
            	  android:layout_height="wrap_content"
            	  android:layout_width="wrap_content"
            	  android:text="编辑学校"
            	  android:layout_centerHorizontal="true"
            	  android:layout_centerVertical="true"
            	  android:textColor="@color/white"
            	  android:textSize="18sp"/>


<ImageButton
		    android:id="@+id/register_page_back_button"
		    android:layout_width="44dp"
		    android:layout_height="44dp"
		    android:layout_centerVertical="true"
		    android:background="@drawable/button_click_background_change"
		    android:src="@drawable/back" />
        </RelativeLayout>
       </LinearLayout>

            <LinearLayout android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">
          <RelativeLayout android:layout_height="match_parent"
              android:layout_width="match_parent">

              
              
             
              
              <EditText
                  android:id="@+id/edit_school"
                  android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:layout_marginTop="70dp"
                  android:gravity="center"
                  android:hint="请输入学校"
                  android:textColor="@color/eighty_black"
                  android:textColorHint="@color/twenty_black"
                  android:textSize="18sp"   
                  android:singleLine="true"
                  android:background="@drawable/common_round_input"/>
              
             
                
           
           <Button
               android:id="@+id/update_nickname_page_finish_button"
               android:layout_height="40dp"
               android:layout_width="match_parent"
               android:layout_marginTop="122dp"
               android:text="完成"  
          	   android:textSize="18sp"
          	   android:textColor="@color/eighty_black"
               android:background="@drawable/common_button_selector"
               />
           
             
          </RelativeLayout>      
                
            </LinearLayout>
</LinearLayout>
