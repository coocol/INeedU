<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
 
   
   <LinearLayout android:layout_height="35dp"
     android:layout_width="64dp">
 <RelativeLayout android:layout_height="match_parent"
     android:layout_width="match_parent">

      <TextView
          android:id="@+id/need_detail_page_item_helpername"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="6dp"
          android:layout_alignParentTop="true"
          android:textColor="@color/blue"
          android:textSize="12sp"/>

      <TextView
          android:id="@+id/tv_floor"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_alignParentRight="true"
          android:textColor="@color/sixty_black"
          android:textSize="10sp" 
          android:layout_marginRight="6dp"/>

 </RelativeLayout> 
 </LinearLayout>
 
 <LinearLayout android:layout_height="wrap_content"
     android:layout_width="match_parent">
 <RelativeLayout android:layout_height="wrap_content"
     android:layout_width="match_parent">
   
     
 
      <ImageButton android:id="@+id/need_detail_page_item_headpic_button"
          android:layout_height="35dp"
          android:layout_width="35dp"
          android:scaleType="fitXY"
          android:background="@drawable/logo"/>
     
      
      <TextView
          android:id="@+id/tv_sex"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignTop="@+id/need_detail_page_item_headpic_button"
          android:layout_marginLeft="6dp"
          android:paddingLeft="12dp"
          android:layout_toRightOf="@+id/need_detail_page_item_headpic_button"
          android:textColor="@color/sixty_black"
          android:textSize="10sp" />
      
       <TextView
          android:id="@+id/need_detail_page_item_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignTop="@+id/need_detail_page_item_headpic_button"
          android:layout_toRightOf="@id/tv_sex"
          android:layout_marginLeft="6dp"
          android:textColor="@color/sixty_black"
          android:textSize="10sp" />
      
		
		<TextView
		    android:id="@+id/need_detail_page_item_comment_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/tv_sex"
		    android:layout_below="@+id/tv_sex"
		    android:layout_marginRight="12dp"
		    android:layout_marginTop="6dp"
		    android:autoLink="web|email|map"
		    android:background="@drawable/chat_worldbubble_left_60"
		    android:minHeight="30dp"
		    android:paddingLeft="16dp"
		    android:paddingRight="6dp"
		    android:paddingTop="6dp"
		    android:textColor="@color/eighty_black"
		    android:textSize="13sp" />

      </RelativeLayout> 
      </LinearLayout> 
    </LinearLayout>>
</LinearLayout>
