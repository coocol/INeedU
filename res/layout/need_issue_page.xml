<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.eethan.ineedu.secondaryactivity.CheckUpdateActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp" 
        android:background="@color/blue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        

            <ImageButton
			    android:id="@+id/pour_listen_issue_page_back_button"
			    android:layout_width="44dp"
			    android:layout_height="44dp"
			    android:layout_centerVertical="true"
			    android:background="@drawable/button_click_background_change"
			    android:src="@drawable/back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_centerInParent="true"
                android:text="发布见面"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp" >

            <EditText
                android:id="@+id/need_issue_page_describtion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/five_corner_ten_black"
                android:cursorVisible="true"
                android:gravity="top"
                android:maxLength="50"
                android:minHeight="69dp"
                android:padding="6dp"
                android:textColor="@color/sixty_black"
                android:textSize="16dp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="限时:"
                android:textColor="@color/blue"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/need_issue_page_limittime_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/need_issue_page_limittime_radiobutton1"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="49dp"
                    android:background="@drawable/round_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="10分"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" 
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/need_issue_page_limittime_radiobutton2"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="-30dp"
                    android:background="@drawable/round_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="30分"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" 
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/need_issue_page_limittime_radiobutton3"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="181dp"
                    android:layout_marginTop="-30dp"
                    android:background="@drawable/round_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="1时"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" 
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/need_issue_page_limittime_radiobutton4"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/round_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="6时"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" 
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/need_issue_page_limittime_radiobutton5"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="66dp"
                    android:layout_marginTop="-30dp"
                    android:background="@drawable/round_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="24时"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" 
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/need_issue_page_limittime_radiobutton6"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="132dp"
                    android:layout_marginTop="-30dp"
                    android:background="@drawable/round_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="3天"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" 
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/need_issue_page_limittime_radiobutton7"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="198dp"
                    android:layout_marginTop="-30dp"
                    android:background="@drawable/round_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="7天"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" 
                    android:layout_weight="1"/>
            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报酬:"
                android:layout_centerVertical="true"
                android:textColor="@color/blue"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/need_issue_page_reward_describtion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="49dp"
                android:gravity="left"
                android:maxLength="10"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:textSize="15sp" 
                android:textColor="@color/blue"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/thirty_black" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp" 
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            >

            <RadioGroup
                android:id="@+id/need_issue_page_payoff_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/need_issue_page_payoff_radiobutton1"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="请奶茶"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/need_issue_page_payoff_radiobutton2"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="96dp"
                    android:layout_marginTop="-30dp"
                    android:background="@drawable/round_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="请吃饭"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/need_issue_page_payoff_radiobutton3"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="192dp"
                    android:layout_marginTop="-30dp"
                    android:background="@drawable/round_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="请电影"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/need_issue_page_payoff_radiobutton4"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/round_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="神秘礼物"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/need_issue_page_payoff_radiobutton5"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="126dp"
                    android:layout_marginTop="-30dp"
                    android:background="@drawable/round_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="丰厚红包"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/need_issue_page_payoff_radiobutton6"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/round_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="￥2"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/need_issue_page_payoff_radiobutton7"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="66dp"
                    android:layout_marginTop="-30dp"
                    android:background="@drawable/round_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="￥5"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/need_issue_page_payoff_radiobutton8"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="132dp"
                    android:layout_marginTop="-30dp"
                    android:background="@drawable/round_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="￥10"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/need_issue_page_payoff_radiobutton9"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="198dp"
                    android:layout_marginTop="-30dp"
                    android:background="@drawable/round_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="￥20"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" />
            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="类型:"
                android:textColor="@color/blue"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/need_issue_page_type_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/need_issue_page_type_radiobutton1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="49dp"
                    android:background="@drawable/circle_button_blue_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="问"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/need_issue_page_type_radiobutton2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/circle_button_blue_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="借"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/need_issue_page_type_radiobutton3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/circle_button_blue_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="邀"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/need_issue_page_type_radiobutton4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/circle_button_blue_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="带"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/need_issue_page_type_radiobutton5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/circle_button_blue_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="买"
                    android:textColor="@color/sixty_black"
                    android:textSize="15sp" />
            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" 
            android:layout_marginBottom="24dp">

          

            <Button
                android:id="@+id/need_issue_page_issue_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/common_button_selector"
                android:text="发布"
                android:textSize="15sp"
                android:textColor="@color/eighty_black"/>

            
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>
</LinearLayout>
